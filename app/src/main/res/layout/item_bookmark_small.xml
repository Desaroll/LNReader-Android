<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:text="pageTitle"
        android:visibility="gone"
        android:textSize="14sp" />
    
    <TextView
        android:id="@+id/p_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/pageTitle"
        android:layout_alignParentTop="true"
        android:text="#pIndex"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/excerpt"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/create_date"
        android:text="Excerpt..."
        android:textColor="#888888"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/create_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/p_index"
        android:text="Create Date"
        android:textColor="#888888"
        android:textSize="12sp" />
    
    <CheckBox
        android:id="@+id/chk_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="25dp"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:visibility="gone" />

</RelativeLayout>