<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

	<CheckBox
        android:id="@+id/chk_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:visibility="visible" />
	
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/chk_selection"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textSize="14sp" 
        android:text="@string/find_missing_chapter" />

    <TextView
        android:id="@+id/details"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_toLeftOf="@+id/is_downloaded"
        android:layout_toRightOf="@+id/chk_selection"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:paddingBottom="6dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="5dp"
        android:text="@string/find_missing_chapter" />
    
    <ImageView
        android:id="@+id/is_downloaded"
        android:src="@drawable/ic_downloaded"
        android:layout_below="@+id/title"
        android:scaleType="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</RelativeLayout>